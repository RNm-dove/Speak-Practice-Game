<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    >

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="2もじのことば\n\nレベル\n★"
        android:textSize="15dp"
        android:padding="15dp"
        android:id="@+id/stage1"
        android:layout_margin="5dp"
        android:textColor="@color/white"
        android:background="@drawable/button_board_state"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="3もじのことば\n\nレベル\n★★"
        android:textSize="15dp"
        android:padding="15dp"
        android:id="@+id/stage2"
        android:layout_margin="5dp"
        android:textColor="@color/white"
        android:background="@drawable/button_board_state"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="4もじのことば\n\nレベル\n★★★"
        android:textSize="15dp"
        android:padding="15dp"
        android:id="@+id/stage3"
        android:layout_margin="5dp"
        android:textColor="@color/white"
        android:background="@drawable/button_board_state"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="5もじのことば\n\nレベル\n★★★★"
        android:textSize="15dp"
        android:padding="15dp"
        android:id="@+id/stage4"
        android:layout_margin="5dp"
        android:textColor="@color/white"
        android:background="@drawable/button_board_state
"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ホームへもどる"
        android:textSize="15dp"
        android:id="@+id/gohome"
        android:layout_margin="5dp"
        android:textColor="@color/white"
        android:background="@drawable/button_state"/>



</LinearLayout>